generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Competition {
  id Int @id @default(autoincrement())
  name String @unique
}



model Contest {
  id Int @id @default(autoincrement())
  date DateTime
  team1 Team @relation(fields: [team1Id], references: [id])
  team1Id Int
  team2 Int
  winnerTeamId Int
  offensiveBonus Boolean @default(false)
  defensiveBonus Boolean @default(false)
  competitionId Int 
}

model Team {
  id Int @id @default(autoincrement())
  teamName String @unique
}